$color-pack = false

@import '~vuetify/src/stylus/main'

pre {
  display: block;
  border-radius: 3px;
  line-height: 14px;
  white-space: pre-wrap;
  font-size: 87%;
  font-weight: 900;
  background-color: #f5f5f5;
  color: #bd4147;
  padding: 10px 15px;
  margin-top: 0;
  margin-bottom: 10px;
  box-shadow: 0 2px 1px -1px rgba(0, 0, 0, .2), 0 1px 1px 0 rgba(0, 0, 0, .14), 0 1px 3px 0 rgba(0, 0, 0, .12);
}

a:hover, .toolbar__title a {
  text-decoration: none;
}

.social-icon {
  width: 32px;
  height: 32px;
  float: left;
  display: inline-block;
}

ol, ul {
  list-style-position: inside;

  li {
    padding: 4px 6px;
    margin-bottom: 2px;

    span {
      margin-left: 8px;
    }
  }

  ul,ol {
    list-style-type: square;
    margin-left: 10px;
  }
}

.list-unstyled {
  list-style: none;
}
